<div class="row">
 <div class="col-lg-12">
  <h1 class="page-header">
    Users
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/dashboard/show">Dashboard</a>
    </li>
    <li class="active">
      Users
    </li>
  </ol>
</div>
</div>

<div class="col-xs-12 col-md-9 container-fluid panel-default">

  <div class="panel panel-primary">
    <div class="panel-heading clearfix ">
      <h4 class="panel-title pull-left" style="padding-top: 7.5px;">User List</h4>
      <div class="input-group col-md-offset-6 col-xs-offset-8">
        <div class="input-group-btn"></i></button>&nbsp;
          <div class="divider"></div>
          <a href="/users/new"><button class="btn btn-primary no-curve pull-right">Add User</button></a>
          
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
       <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Access Level</th>
        <th></th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
      <tr> 
        <td><%= user.firstname %> <%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.access_level %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Delete', user_path(user),
        method: :delete,
        data: { confirm: "Are you sure you want to delete "+ user.firstname + " " + user.surname + " all of their clients will be removed? (Please transfer clients first if you wish to keep them)"}, class: "btn btn-danger btn-xs" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

</div>

</div>
