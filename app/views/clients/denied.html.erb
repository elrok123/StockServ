<div class="row">
 <div class="col-lg-12">
  <h1 class="page-header">
    Clients
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/dashboard/show">Dashboard</a>
    </li>
    <li>
      <a href="/clients">Clients</a>
    </li>
    <li class="active">
      New Client
    </li>
  </ol>
</div>
</div>

<div class="row">
  <div class="container-fluid">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 toppad" >
     
      
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Edit Client</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle"> </div>
            
            
            <div class=" col-md-9 col-lg-9 "> 
              <%= form_for :client,:html => { :class =>
                'table-user-information' }, url: clients_path do |f| %>
              <table class="table table-user-information">
                <tbody>
                 
                 <% if @client.errors.any? %>
                 <div id="error_explanation">
                  <h2>
                    <%= pluralize(@client.errors.count, "error") %> require fixing before this client can be saved:
                  </h2>
                  <ul>
                    <% @client.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
                
                <tr>
                  
                  <tr>
                    <td>Title</td>
                    <td><%= f.select :title, options_for_select([["Mr","Mr"],["Mrs","Mrs"],["Miss","Miss"], ["Ms","Ms"],["Dr","Dr"]],1) %></td>
                  </tr>
                  <tr>
                    <td>First Name</td>
                    <td><%= f.text_field :first_name,class: "form-control" %></td>
                  </tr>
                  <tr>
                    <td>Last Name</td>
                    <td><%= f.text_field :last_name,class: "form-control" %></td>
                  </tr>
                  <tr>
                    <td>Date of Birth</td>
                    <td><%= f.date_select :dob, start_year:1920, end_year:Date.today.year, :class => 'datepicker' %></td>
                  </tr>
                  <tr>
                    <td>Address</td>
                    <td> <%= f.text_field :address,class: "form-control" %></td>
                  </tr>
                  <tr>
                    <td>Home Telephone</td>
                    <td><%= f.telephone_field :home_tel,class: "form-control" %></td>
                  </tr>
                  <tr>
                    <td>Mobile Telephone</td>
                    <td><%= f.telephone_field :mobile_tel,class: "form-control" %></td>
                  </tr>
                  <tr>
                    <td>Email</td>
                    <td><%= f.email_field :email,class: "form-control" %></td>
                  </tr>
                  
                </tbody>
              </table>
              <span class="pull-right">
                <%= f.submit class: "btn btn-success", data: { no_turbolink: true }%>
                <% end %>
                <a href="/clients" data-original-title="Return" data-toggle="tooltip" type="button" class="btn btn-danger">Cancel </a>
              </span>
              
            </div>
          </div>
        </div>
      </div>                 
    </div>
  </div>
</div>
