<div class="row">
                     <div class="col-lg-12">
                        <h1 class="page-header">
                            Clients
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <a href="/dashboard/show">Dashboard</a>
                            </li>
                            <li>
                                <a href="/clients">Clients</a>
                            </li>
                            <li class="active">
                                Show
                            </li>
                        </ol>
                    </div>
                </div>

<div class="row">
      <div class="container-fluid">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 toppad" >
   
   		
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Client Details</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle"> </div>
                
                
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                     
                   
                        <tr>
                        <td>Title</td>
                        <td><%= @client.title %></td>
                      </tr>
                      <tr>
                        <td>First Name</td>
                        <td><%= @client.first_name %></td>
                      </tr>
                      <tr>
                        <td>Last Name</td>
                        <td><%= @client.last_name %></td>
                      </tr>
                      <tr>
                        <td>Date of Birth</td>
                        <td><%= @client.dob %></td>
                      </tr>
                      <tr>
                        <td>Address</td>
                        <td><%= @client.address %></td>
                      </tr>
                      <tr>
                        <td>Home Telephone</td>
                        <td><%= @client.home_tel %></td>
                      </tr>
                      <tr>
                        <td>Mobile Telephone</td>
                        <td><%= @client.mobile_tel %></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><%= @client.email %></td>
                      </tr>
                      
                     
                    </tbody>
                  </table>
                  <span class="pull-right">
                  	<%= link_to 'Edit', edit_client_path(@client), class: "btn btn-warning" %>
                  <%= link_to 'Back to Client List', clients_path, class: "btn btn-primary" %>
                  <%= link_to 'Portfolio', portfolio_path(@client), class: "btn btn-success" %>
                  <%= link_to 'Delete', client_path(@client),
        method: :delete,
        data: { confirm: "Are you sure you want to delete " + @client.first_name + " " + @client.last_name + "?" }, class: "btn btn-danger " %>
                </span>
                </div>
              </div>
            </div>
           </div>                 
          </div>
        </div>
      </div>
