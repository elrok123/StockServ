<!DOCTYPE html>
<html>
<head>
	<title>StockServ</title>

	<!-- jQuery Stuffs -->
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">

	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

	<link href="/assets/favicon.ico" rel="icon" type="image/x-icon" />
	
	
	
	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

	<script src="/assets/jquery.js"></script>
	
	<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
	
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	
</head>
<body>
	
	<% if params[:controller] != "sessions" %>	
	<div id="wrapper">

		<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>

				</button>
				
				<a class="navbar-brand center-block" href="/dashboard/show/"><img style="max-width:150px; margin-top: -7px;" src="/assets/logoheadwhite.png"></a>
			</div>
			<!-- Top Menu Items -->
			<ul class="nav navbar-right top-nav">
				
				
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= @user.firstname + " " + @user.surname %> <b class="caret"></b></a>
					<ul class="dropdown-menu">
						
						<li>
							<a href="/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
						</li>
					</ul>
				</li>
			</ul>
			<!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
			<div class="navbar-collapse">
				<ul class="nav navbar-nav side-nav top-border omg-white">
					<li class=<%= current_class?('/dashboard/show') %>>
						<a class="omg-white" href="/dashboard/show">
							<i class="fa fa-dashboard"></i>
							Dashboard
						</a>
					</li>
					<li class=<%= current_class?('/market/show') %>>
						<a  href="/market/show">
							<i class="fa fa-line-chart"></i>
							Market
						</a>
					</li>
					<li class=<%= current_class?('/profile/view') %>>
						<a href="/profile/view">
							<i class="fa fa-user"></i>
							Profile
						</a>
					</li>
					<li class=<%= current_class?('/clients') %>>
						<a href="/clients">
							<i class="fa fa-users"></i>
							My Clients
						</a>
					</li>
					<li class=<%= current_class?('/meetings') %>>
						<a  href="/meetings">
							<i class="fa fa-slideshare"></i>
							Meetings
						</a>
					</li>
					<li class=<%= current_class?('/calendar/show') %>>
						<a href="/calendar/show">
							<i class="fa  fa-calendar"></i>
							
							Calendar
						</a>
					</li><br />
					<% if @user.access_level > 1 %>
                        <li class=<%= current_class?('/users/index') %>>
                            <a href="/users">
                                <i class="fa  fa-user"></i>
                                
                                Users
                            </a>
                        </li>
                    <% end %>
					
				</ul>
			</div>
			<!-- /.navbar-collapse -->
		</nav>

		<div id="page-wrapper">

			<div class="container-fluid">
				

				<%= yield %>
				
				
				
				<% else %>
				<%= yield %>
				<% end %>

				
			</div>

		</div>
		

	</div>
</body>
</html>
