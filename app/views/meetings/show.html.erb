<div class="row">
    <div class="col-lg-12">
        <h1>Meetings</h1>
            <ol class="breadcrumb">
                <li>
                                <a href="/dashboard/show">Dashboard</a>
                            </li>
                <li class="active">
                    Meetings
                </li>
                            
            </ol>
    </div>
</div>

<div class="row">  
<div class="col-ld-12 col-md-8 container-fluid panel-default">              
	<div class="panel panel-primary no-curve">
        <div class="panel-heading clearfix no-curve">
            <h4 class="panel-title pull-left" style="padding-top: 7.5px;">Meeting Details</h4>
            <div class="input-group-btn">
                <a href="/meetings/<%=@meeting.id%>/edit"><button class="btn btn-warning no-curve pull-right">Edit Meeting</button></a>
            </div>  
        </div>

        <div class="panel-body">
        <div class="list-group">
       
                     <a class="list-group-item">
        				<h4 class="list-group-item-heading">Subject: <%= @meeting.meeting_subject %></h4> <br/>
                        <p class="list-group-item-text">
        				Date: <%= @meeting.meeting_date.strftime("%A, %B %d, %Y") %> <br/>
        				Client: <%= @meeting.client_name %> <br/>
                        Time: <%= @meeting.meeting_date.strftime("%H:%M %p") %> <br/>
        				Meeting Description: <%= @meeting.meeting_description %>
                        </p>
                        </a>
        	
                
        	
 
        </div>
    </div>

</div>	
</div>
</div>
