<div class="row">
                    <div class="col-lg-12">
                        <h1>Meeting Details</h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                Dashboard
                            </li>
                            
                        </ol>
                    </div>
                </div>

<div class="row">                
	<div class="panel panel-primary no-curve">
        <div class="panel-heading clearfix no-curve">
            <h4 class="panel-title pull-left" style="padding-top: 7.5px;">Next Meeting</h4>
                    </div>
        <div class="panel-body">
            <p>
		<% unless @meetings.nil? %>
			<% @meetings.each do |meeting| %>
				Subject: <%= meeting.meeting_subject %> <br/>
				Date: <%= meeting.date_of_meeting %> <br/>
				Client: <%= meeting.client_name %> <br/>
				Meeting Description: <%= meeting.meeting_description %>
			<% end %>
		<% end %>
	</p>
        </div>
    </div>

	
</div>