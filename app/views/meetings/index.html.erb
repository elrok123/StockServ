<h1>Listing Meetings</h1>
<%= link_to 'New meeting', new_meeting_path %>
<table>
  <tr>
    <th>Subject</th>
    <th>Date</th>
    <th>Client</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.meeting_subject %></td>
      <td><%= meeting.meeting_date %></td>
      <td><%= meeting.client_name %></td>
      <td><%= meeting.meeting_description %></td>

      <td><%= link_to 'Show', meeting_path(meeting) %></td>
      <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
      <td><%= link_to 'Destroy', meeting_path(meeting),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
